<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BasicMoviesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="buttonStyle">@style/MainButtonTheme</item>
        <item name="editTextStyle">@style/MainEditTextTheme</item>
        <item name="android:textViewStyle">@style/MainTextViewTheme</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button_rounded</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="MainEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/purple_200</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="hintTextColor">@color/darkGray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainTextViewTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>